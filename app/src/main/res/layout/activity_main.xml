<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        tools:context=".MainActivity">

    <FrameLayout android:layout_margin="16dp" android:layout_gravity="center" android:padding="1px"
                 android:background="#7f000000"
                 android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:orientation="vertical">
        <LinearLayout android:padding="16dp" android:layout_gravity="center" android:background="#ffffffff"
                      android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:fontFamily="sans-serif-light" android:layout_marginBottom="16dp"
                      android:layout_marginTop="32dp"
                      android:text="Hello again!" android:textSize="32sp"/>
            <EditText android:hint="login" android:inputType="textEmailAddress" android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
            <EditText android:hint="password" android:inputType="textPassword" android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_marginTop="16dp"
                          android:layout_height="wrap_content">
                <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                             android:background="#7f000000"
                             android:layout_weight="1" android:layout_marginRight="8dp" android:padding="1px">
                    <Button
                            android:background="#ffffffff"
                            android:id="@+id/generate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="generate"/>
                </FrameLayout>
                <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                             android:background="#7f000000"
                             android:layout_weight="1" android:layout_marginLeft="8dp" android:padding="1px">
                    <Button
                            android:background="#ffffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="login"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>